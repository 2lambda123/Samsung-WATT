# GNU Makefile based on shared rules provided by the Native Client SDK.
# See README.Makefiles for more details.

VALID_TOOLCHAINS:=emscripten newlib pnacl

PEPPERJS_SRC_ROOT:=../..
include $(PEPPERJS_SRC_ROOT)/tools/common.mk

TARGET = websocket

DEPS=ppapi ppapi_cpp
LIBS=$(DEPS)

SOURCES = websocket.cc

#
# Use the library dependency macro for each dependency
#
$(foreach dep,$(DEPS),$(eval $(call DEPEND_RULE,$(dep))))

# Build rules generated by macros from common.mk:

$(foreach src,$(SOURCES),$(eval $(call COMPILE_RULE,$(src))))

# The PNaCl workflow uses both an unstripped and finalized/stripped binary.
# On NaCl, only produce a stripped binary for Release configs (not Debug).
ifeq ($(CONFIG),Release)
$(eval $(call LINK_RULE,$(TARGET)_unstripped,$(SOURCES),$(LIBS),$(DEPS)))
$(eval $(call STRIP_RULE,$(TARGET),$(TARGET)_unstripped))
else
$(eval $(call LINK_RULE,$(TARGET),$(SOURCES),$(LIBS),$(DEPS)))
$(eval $(call COPY_RULE,../common.js,data))
$(eval $(call COPY_RULE,../loadnacl.js,data))
$(eval $(call COPY_RULE,$(OUTDIR)/websocket.js,data))
$(eval $(call COPY_RULE,example.js,data))
$(eval $(call COPY_RULE,index.html,data))
endif

$(eval $(call NMF_RULE,$(TARGET),))
